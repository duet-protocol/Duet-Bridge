{
  "name": "duet-bridge",
  "description": "Bridge duet token family between BSC(original chain) to some EVM compatible chains",
  "main": "index.js",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "duet": {
    "sdk": true
  },
  "scripts": {
    "abi": "npx hardhat export-abi",
    "compile": "npx hardhat compile",
    "compile:watch": "npx hardhat watch compile",
    "clean": "rm -rf artifacts && rm -rf cache && rm -rf coverage && rm -rf typechain",
    "deploy": "ts-node ./scripts/deploy all",
    "executor": "ts-node ./scripts/deploy gen-exec-configs && cd executor && node ./entrypoint.js",
    "hardhat": "npx hardhat",
    "hint": "npx hardhat check",
    "test": "REPORT_GAS=true npx hardhat test",
    "test:node": "npx hardhat node",
    "test:watch": "npx hardhat watch test",
    "test:coverage": "npx hardhat coverage",
    "test:size-contracts": "npx hardhat size-contracts",
    "docgen": "rm -rf ./docs && npx hardhat docgen",
    "prettier": "prettier --write --cache  --config ./.prettierrc --ignore-path ./.prettierignore --no-error-on-unmatched-pattern 'contracts/**/*.sol' **/*.js **/*.ts **/*.json **/*.yml **/*.yaml",
    "pre-commit": "pnpm run prettier"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run pre-commit"
    }
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@ltd/j-toml": "^1.38.0",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.8.3",
    "@openzeppelin/hardhat-upgrades": "^1.22.1",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@tenderly/hardhat-tenderly": "^1.7.1",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.26",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "axios": "^0.27.2",
    "bignumber.js": "^9.0.2",
    "bn.js": "^4.12.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chalk": "^4.1.2",
    "csv": "^6.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers-multicall": "^0.2.3",
    "fs-extra": "^10.1.0",
    "glob": "^8.1.0",
    "hardhat-abi-exporter": "^2.9.0",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-preprocessor": "^0.1.4",
    "hardhat-watcher": "^2.3.0",
    "husky": "^8.0.1",
    "moment": "^2.29.3",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "solidity-docgen": "^0.6.0-beta.35",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typechain": "^8.1.1",
    "typescript": "^4.9.5",
    "yargs": "^17.7.1"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts-upgradeable": "^4.8.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.14.0",
    "hardhat-deploy": "^0.11.26",
    "lodash": "^4.17.21",
    "sgn-v2-contracts": "https://github.com/celer-network/sgn-v2-contracts#1782ba66c6e510337e98f82c857f83d49aa4b13d"
  }
}
